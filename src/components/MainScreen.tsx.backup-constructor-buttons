    headerDescriptionExitAnimation: 'fadeOut' as 'none' | 'fadeOut' | 'slideUp' | 'slideDown' | 'slideLeft' | 'slideRight' | 'zoomOut' | 'zoomIn' | 'rotateOut' | 'dissolve',
    // –¢–∞–π–º–∏–Ω–≥–∏ –∞–Ω—ñ–º–∞—Ü—ñ–π
    headerAnimationDuration: 800,
