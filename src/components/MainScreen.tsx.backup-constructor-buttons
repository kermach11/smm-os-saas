  const [carouselSettings, setCarouselSettings] = useState({
    carouselStyle: 'premium' as 'classic' | 'modern' | 'minimal' | 'premium' | 'neon' | 'glass' | 'retro' | 'elegant' | 'tech' | 'organic',
