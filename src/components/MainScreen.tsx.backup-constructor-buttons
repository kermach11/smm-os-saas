  // –¢–µ–ø–µ—Ä –±—Ä–∞—É–∑–µ—Ä —Å–∞–º –∫–µ—Ä—É—î –≤—Å—ñ–º–∞ body —Å—Ç–∏–ª—è–º–∏ –±–µ–∑ –Ω–∞—à–æ–≥–æ –≤—Ç—Ä—É—á–∞–Ω–Ω—è

  // üéØ KEYBOARD SHORTCUTS –î–õ–Ø –ö–û–ù–°–¢–†–£–ö–¢–û–†–ê
  useEffect(() => {
    const handleKeyDown = (event: KeyboardEvent) => {
      // Ctrl + E - –ø–µ—Ä–µ–∫–ª—é—á–∏—Ç–∏ –∫–æ–Ω—Å—Ç—Ä—É–∫—Ç–æ—Ä (–¥–ª—è —Ç–µ—Å—Ç—É–≤–∞–Ω–Ω—è)
      if (event.ctrlKey && event.key === 'e') {
        event.preventDefault();
        toggleConstructorMode();
        console.log('üéØ –ö–æ–Ω—Å—Ç—Ä—É–∫—Ç–æ—Ä –ø–µ—Ä–µ–∫–ª—é—á–µ–Ω–æ:', !isConstructorMode);
      }
      
      // Ctrl + R - —Å–∫–∏–Ω—É—Ç–∏ –≤—Å—ñ –ø–æ–∑–∏—Ü—ñ—ó (—Ç—ñ–ª—å–∫–∏ –≤ —Ä–µ–∂–∏–º—ñ –∫–æ–Ω—Å—Ç—Ä—É–∫—Ç–æ—Ä–∞)
      if (event.ctrlKey && event.key === 'r' && isConstructorMode) {
        event.preventDefault();
        resetAllPositions().then(() => {
          console.log('üéØ –ü–æ–∑–∏—Ü—ñ—ó —Å–∫–∏–Ω—É—Ç–æ');
        }).catch(error => {
          console.error('‚ùå –ü–æ–º–∏–ª–∫–∞ —Å–∫–∏–¥–∞–Ω–Ω—è –ø–æ–∑–∏—Ü—ñ–π:', error);
        });
      }
      
      // Ctrl + S - –∑–±–µ—Ä–µ–≥—Ç–∏ –≤—Å—ñ –ø–æ–∑–∏—Ü—ñ—ó (—Ç—ñ–ª—å–∫–∏ –≤ —Ä–µ–∂–∏–º—ñ –∫–æ–Ω—Å—Ç—Ä—É–∫—Ç–æ—Ä–∞)
      if (event.ctrlKey && event.key === 's' && isConstructorMode) {
        event.preventDefault();
        saveAllPositions().then(result => {
          console.log('üíæ –ü–æ–∑–∏—Ü—ñ—ó –∑–±–µ—Ä–µ–∂–µ–Ω–æ:', result);
        });
      }
      
      // Ctrl + A - –ø–æ–≤–µ—Ä–Ω—É—Ç–∏ –∫–Ω–æ–ø–∫—É –∞–¥–º—ñ–Ω –ø–∞–Ω–µ–ª—ñ (–≤ —Ä–µ–∂–∏–º—ñ –∫–æ–Ω—Å—Ç—Ä—É–∫—Ç–æ—Ä–∞)
      if (event.ctrlKey && event.key === 'a' && isConstructorMode) {
        event.preventDefault();
        resetBoxPosition('adminButtonBox').then(() => {
          console.log('üéØ –ö–Ω–æ–ø–∫–∞ –∞–¥–º—ñ–Ω –ø–∞–Ω–µ–ª—ñ –ø–æ–≤–µ—Ä–Ω—É—Ç–∞');
        }).catch(error => {
          console.error('‚ùå –ü–æ–º–∏–ª–∫–∞ —Å–∫–∏–¥–∞–Ω–Ω—è –ø–æ–∑–∏—Ü—ñ—ó –∞–¥–º—ñ–Ω –∫–Ω–æ–ø–∫–∏:', error);
        });
      }
      
      // Escape - –≤–∏–π—Ç–∏ –∑ –∫–æ–Ω—Å—Ç—Ä—É–∫—Ç–æ—Ä–∞
      if (event.key === 'Escape' && isConstructorMode) {
        event.preventDefault();
        disableConstructorMode();
        console.log('üéØ –ö–æ–Ω—Å—Ç—Ä—É–∫—Ç–æ—Ä –¥–µ–∞–∫—Ç–∏–≤–æ–≤–∞–Ω–æ');
      }
    };

    document.addEventListener('keydown', handleKeyDown);
    return () => document.removeEventListener('keydown', handleKeyDown);
  }, [resetAllPositions, resetBoxPosition, disableConstructorMode, toggleConstructorMode, isConstructorMode, saveAllPositions]);




  
  // –î–æ–¥–∞—î–º–æ —Å—Ç–∞–Ω –¥–ª—è –∑–∞–≥–æ–ª–æ–≤–∫—ñ–≤
  const [headerTitle, setHeaderTitle] = useState("–£—Å–µ —â–æ —Ç—Ä–µ–±–∞");
