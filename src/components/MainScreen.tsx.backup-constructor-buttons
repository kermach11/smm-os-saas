interface MainScreenProps {
  visible: boolean;
  userInteracted?: boolean;
}

const MainScreen = ({ visible, userInteracted = false }: MainScreenProps) => {
  // üöÄ –ù–û–í–ê –ê–î–ê–ü–¢–ò–í–ù–ê –°–ò–°–¢–ï–ú–ê - –ï–¢–ê–ü 1
  const { 
    deviceType, 
