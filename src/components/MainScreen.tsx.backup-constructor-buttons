  useEffect(() => {
    console.log('üîß –ù–æ–≤–∞ –∞–¥–∞–ø—Ç–∏–≤–Ω–∞ —Å–∏—Å—Ç–µ–º–∞ –∞–∫—Ç–∏–≤–Ω–∞:', {
      deviceType,
